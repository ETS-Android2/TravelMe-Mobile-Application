<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChallengePOSTActivity">

    <RelativeLayout
        android:id="@+id/reli"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/firstcard"
        android:padding="10dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <ImageView

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/challeneicon"
            android:layout_gravity="center_vertical|center"/>





    </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <View
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="180dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </View>
    <TextView

        android:drawableLeft="@drawable/ic_baseline_comment_24"
        android:id="@+id/challengecomment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 0 "
        android:textSize="50dp"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_below="@id/reli"
        android:textColor="@color/whitecolor" />
    <TextView
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="120dp"
        android:drawableLeft="@drawable/ic_likeh"
        android:id="@+id/likej22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 0 "
        android:textSize="50sp"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_below="@id/reli"
        android:textColor="@color/whitecolor" />


    <androidx.cardview.widget.CardView
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/reli"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="18sp"
                android:padding="10dp">

            </TextView>
            <EditText
                android:id="@+id/challengelocation"
                android:gravity="start"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Challenge"
                android:textSize="18sp"
                android:padding="10dp">

            </TextView>
            <EditText
                android:id="@+id/challengepost"
                android:gravity="start"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="10dp">

            </EditText>
            <Button
                android:id="@+id/challengepostbu"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post"
                android:textColor="@color/whitecolor"
                android:background="@drawable/round_bg">

            </Button>
        </LinearLayout>



    </androidx.cardview.widget.CardView>




</RelativeLayout>