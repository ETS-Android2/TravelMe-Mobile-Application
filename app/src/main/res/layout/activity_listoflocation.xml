<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/view_container"
    >

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:background="#D2FFEB3B"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/locationimnagelist"
                    android:layout_gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/rathnapura"/>



                <TextView

                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:padding="5dp"
                    android:background="#3F51B5"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:id="@+id/reviwes"
                    android:textSize="14sp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="8.9"
                    android:layout_gravity="center"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    tools:ignore="RtlCompat" />


            </LinearLayout>
            <LinearLayout
                android:padding="0dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                    <TextView

                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/locationnamelist"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Anuradhapura"
                        android:gravity="center"/>
                    <TextView
                        android:paddingBottom="2dp"
                        android:layout_margin="2dp"
                        android:textColor="@color/blackcolor"
                        android:layout_gravity="center|start|fill"
                        android:id="@+id/locationdeslist"
                        android:textSize="13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Anuradhapura"
                        android:gravity="start"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/listlocationid"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/urlimagelink"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>







            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>