<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:id="@+id/clickcard"
    >
    <View
        android:background="@color/lightPrimary"
        android:layout_marginLeft="45dp"
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:background="@drawable/round_bg"
        android:id="@+id/profileImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="1dp"
        android:padding="0dp"
        android:src="@drawable/triphistoryicon"
        />
    <TextView
        android:padding="5dp"
        android:id="@+id/taddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="70dp"
        android:text="@string/anuradhapura"
        android:textColor="#E91E63"
        android:drawableLeft="@drawable/ic_baseline_location_address"/>



    <RelativeLayout

        android:id="@+id/relative"
        android:layout_marginStart="45dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tripname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tripname"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/colorAccent" />
        <TextView
            android:textSize="12sp"
            android:id="@+id/datetrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-10-10 to 2020-10-11 "
            android:gravity="right"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#4CAF50"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:id="@+id/tripNote"
            android:padding="2dp"
            android:layout_marginLeft="35dp"
            android:layout_below="@+id/datetrip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tid"
            />

    </RelativeLayout>









</androidx.cardview.widget.CardView>