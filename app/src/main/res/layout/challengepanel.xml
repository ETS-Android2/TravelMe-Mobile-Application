<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp">
    <View
        android:layout_marginTop="44dp"
        android:background="@color/lightPrimary"

        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:background="@drawable/round_bg"
        android:id="@+id/profileImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="1dp"
        android:padding="0dp"
        android:src="@drawable/commentphoto"
        />


    <RelativeLayout

        android:id="@+id/relative"
        android:layout_marginStart="45dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ToggleButton
            android:layout_marginTop="5dp"
            android:id="@+id/challengelike"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/drawbletoggle"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"
            android:textColor="@color/colorAccent"
            android:textOff=""
            android:textOn=""


            />
        <TextView

            android:id="@+id/nooflike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 15 "
            android:layout_alignParentEnd="true"
            android:background="@color/whitecolor"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginRight="65dp"
            android:textColor="@color/colorAccent" />
        <TextView

            android:drawableLeft="@drawable/ic_baseline_comment_24"
            android:id="@+id/challengecomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 15 "
            android:layout_alignParentEnd="true"
            android:background="@color/whitecolor"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginStart="225dp"
            android:textColor="@color/colorAccent" />
        <TextView
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:layout_marginStart="35dp"
            android:id="@+id/challengeusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username">

        </TextView>
        <TextView
            android:textColor="#E91E63"
            android:layout_marginStart="40dp"
            android:id="@+id/challengedate"
            android:text="2020-12-45"
            android:layout_below="@id/challengeusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/challengeusercomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/challengedate"
            android:layout_marginStart="35dp"
            android:padding="5dp"
            android:text="comment" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/cid"
            />

    </RelativeLayout>









</androidx.cardview.widget.CardView>